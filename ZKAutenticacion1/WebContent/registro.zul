	<div width="400px" class="form">
	
		<vlayout spacing="15px">
			<label value="Pre-registro" style="font-size:16px;font-weight:bold;color:gray;" />
			<hlayout spacing="15px">
				<label class="name" value="Nombre:"/>
				<textbox id="nombre" width="200px" constraint="no empty"> </textbox>
			</hlayout>
			<hlayout spacing="15px">
				<label class="name" value="Apellido Paterno:"/>
				<textbox id="paterno" width="200px" constraint="no empty"> </textbox>
			</hlayout>
			<hlayout spacing="15px">
				<label class="name" value="Apellido Materno:"/>
				<textbox id="materno" width="200px" constraint="no empty"> </textbox>
			</hlayout>
			<hlayout spacing="15px">
				<label class="name" value="GÃ©nero:" />				
				<radiogroup id="sexo" width="200px" > 
					<radio label="Hombre" value="hombre"/>
					<radio label="Mujer" Value="mujer"/>
				</radiogroup>
			</hlayout>
			<hlayout spacing="15px">
				<label class="name" value="Correo:"/>
				<textbox id="correo" width="200px" constraint="no empty,/.+@.+\.[a-z]+/: Ingresa tu correo"> </textbox>
			</hlayout>
			<hlayout spacing="15px">
				<label class="name" value="Usuario:"/>
				<textbox id="usuario" width="200px" constraint="no empty"> </textbox>
			</hlayout>
			<hlayout spacing="15px">
				<label class="name" value="Password:"/>
				<textbox id="password" type="password" width="200px" constraint="no empty"> </textbox>
			</hlayout>
			
			<hlayout spacing="15px">
				<button id="bregistrar" class="name" label="Registrar" ></button>
			</hlayout>
		</vlayout>
	</div>
	


</window>